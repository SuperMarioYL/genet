{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend: API Server",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/backend/cmd/api",
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "PORT": "8080",
        "KUBECONFIG": "${workspaceFolder}/.vscode/kubeconfig",
        "GENET_CONFIG": "${workspaceFolder}/.vscode/config.yaml",
        "LOG_LEVEL": "debug"
      },
      "args": [],
      "showLog": true,
      "console": "integratedTerminal"
    },
    {
      "name": "Backend: Lifecycle Controller",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/backend/cmd/controller",
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "KUBECONFIG": "${workspaceFolder}/.vscode/kubeconfig",
        "GENET_CONFIG": "${workspaceFolder}/.vscode/config.yaml",
        "LOG_LEVEL": "debug"
      },
      "args": [],
      "showLog": true,
      "console": "integratedTerminal"
    },
    {
      "name": "Backend: Attach to Process",
      "type": "go",
      "request": "attach",
      "mode": "local",
      "processId": "${command:pickProcess}"
    },
    {
      "name": "Frontend: Chrome Debug",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/frontend/src",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      },
      "preLaunchTask": "Frontend: Start Dev Server"
    },
    {
      "name": "Backend Tests",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}/backend",
      "env": {
        "KUBECONFIG": "${workspaceFolder}/.vscode/kubeconfig"
      },
      "args": [
        "-test.v",
        "-test.run",
        ".*"
      ],
      "showLog": true
    },
    {
      "name": "Backend Tests (Current File)",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${file}",
      "env": {
        "KUBECONFIG": "${workspaceFolder}/.vscode/kubeconfig"
      },
      "showLog": true
    }
  ],
  "compounds": [
    {
      "name": "Full Stack Debug",
      "configurations": [
        "Backend: API Server",
        "Frontend: Chrome Debug"
      ],
      "presentation": {
        "hidden": false,
        "group": "fullstack",
        "order": 1
      }
    }
  ]
}